{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile C++ file with g++"
        },
        {
            "type": "shell",
            "label": "C/C++: run with input/output",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "Get-Content input.txt | & '${fileDirname}\\${fileBasenameNoExtension}.exe' | Out-File output.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Run C++ program with input from input.txt and output to output.txt",
            "dependsOn": ["C/C++: g++ build active file"]
        },
        {
            "type": "shell",
            "label": "C/C++: build and run with input/output",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "C:/msys64/mingw64/bin/g++.exe -g -std=c++17 ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe; if ($?) { Get-Content input.txt | & '${fileDirname}\\${fileBasenameNoExtension}.exe' | Out-File output.txt }"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Compile and run C++ program with input/output"
        }
    ]
}